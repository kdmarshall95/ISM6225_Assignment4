
@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ISM6225_Assignment4.Models.EF_Models.News>

<h2 align="center">News</h2>
<p align="center">This page displays new articles for the selected company.</p>
<a href="#" onclick="history.go(-1)">Go Back</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Summary
            </th>
            <th>
                Source
            </th>
            <th>
                URL
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.source)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.url)">@Html.DisplayFor(modelItem => item.url)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

