@{
    ViewData["Title"] = "Key Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ISM6225_Assignment4.Models.EF_Models.KeyStats

<h2 align="center">Key Statistics</h2>
<p align="center">This page displays some key financial statistics about the company selected.</p>
<a href="#" onclick="history.go(-1)">Go Back</a>
<table class="table">
    <tr>
        <td>
            Name
        </td>
        <td>
            @Model.companyName
        </td>
    </tr>
    <tr>
        <td>
            Symbol
        </td>
        <td>
            @Model.symbol
        </td>
    </tr>
    <tr>
        <td>
            Price To Sales
        </td>
        <td>
            @Model.priceToSales
        </td>
    </tr>
    <tr>
        <td>
            Price To Book
        </td>
        <td>
            @Model.priceToBook
        </td>
    </tr>
    <tr>
        <td>
            Return On Equity
        </td>
        <td>
            @Model.returnOnEquity
        </td>
    </tr>
    <tr>
        <td>
            Return On Capital
        </td>
        <td>
            @Model.returnonCapital
        </td>
    </tr>
    <tr>
        <td>
            Market Capital
        </td>
        <td>
            @Model.marketCap
        </td>
    </tr>
    <tr>
        <td>
            EBITDA
        </td>
        <td>
            @Model.EBITDA
        </td>
    </tr>
</table>
